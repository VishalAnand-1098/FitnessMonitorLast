@using FitnessMonitor.Models.ViewModel
@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .error-message {
            background-color: #f8d7da; /* Red background */
            color: #721c24; /* Dark red text */
            border: 1px solid #f5c6cb; /* Light red border */
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
        }
        .eye-icon {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 20px;
        }

        .form-control-lg {
            padding-right: 40px; /* Adjust padding to make space for the eye icon */
        }

        .login-container {
            max-width: 400px;
            margin: auto;
        }

        .gradient-custom {
            background: #6a11cb; /* Fallback for old browsers */
            background: -webkit-linear-gradient(to right, #2575fc, #6a11cb);
            background: linear-gradient(to right, #2575fc, #6a11cb);
        }
    </style>
</head>
<body class="gradient-custom">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-lg border-light rounded">
                    <div class="card-body p-5">
                        <h2 class="text-center fw-bold mb-4 text-uppercase text-primary">Login</h2>
                        <p class="text-center mb-4 text-muted">Please enter your credentials to login</p>
                        @if (ViewBag.Error != null)
                        {
                            <div class="error-message text-center mb-4">
                                <label>@ViewBag.Error</label>
                            </div>
                        }
                        <!-- Login Form -->
                        <form asp-action="Login" method="post">
                            <!-- Name Input -->
                            <div class="form-outline mb-4">
                                <input type="text" id="typeName" class="form-control form-control-lg" placeholder="Name" asp-for="Name" />
                                <label class="form-label" for="typeName">Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Password Input with Eye Icon -->
                            <div class="form-outline mb-4">
                                <div class="position-relative">
                                    <input type="password" id="typePassword" class="form-control form-control-lg" placeholder="Password" asp-for="Password" />
                                    <label class="form-label" for="typePassword">Password</label>
                                  @*   <span class="eye-icon" onclick="togglePassword()">👁️</span> *@
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Forgot Password Link -->
                           @*  <p class="text-center mb-4">
                                <a href="#" class="text-muted">Forgot password?</a>
                            </p> *@

                            <!-- Login Button -->
                            <button type="submit" class="btn btn-lg btn-primary btn-block w-100">Login</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('typePassword');
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;
        }
    </script>
</body>
</html>
